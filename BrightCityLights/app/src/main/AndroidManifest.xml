<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dronami.brightcitylights">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/app_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/app_icon_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
    >
        <activity android:name="com.dronami.brightcitylights.MissionsActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.dronami.brightcitylights.TutorialActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.dronami.brightcitylights.TitleScreenActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.dronami.brightcitylights.MainActivity"
                android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>